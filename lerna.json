{
  "packages": [
    "packages/components/*",
    "packages/ng-syz/projects/ng-syz",
    "packages/ng-syz"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/package-lock.json",
        "**/*.test.ts",
        "**/*.e2e.ts",
        "**/*.spec.ts",
        "**/*.md",
        "**/*.mdx"
      ],
      "yes": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): bump versions [skip ci]",
      "yes": true
    }
  }
}
